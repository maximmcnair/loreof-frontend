  animation fadeIn .3s .3s
  animation-fill-mode forwards
.topic-desc
  opacity 0
  animation fadeIn .3s .3s
  animation-fill-mode forwards
.topic__contribute
  opacity 0
  animation fadeIn .3s .6s
  animation-fill-mode forwards

.topic__posts
  opacity 0
  animation fadeIn .3s .9s
  animation-fill-mode forwards
