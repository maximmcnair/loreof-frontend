.topic__intro
  width 40%
  padding 140px 40px 60px 40px
  float left
.topic__posts
  width 60%
  float right
  position relative

.btn-alt
  font-family "proxima-nova"
  color #8A8A8A
  border 2px solid #575757
  padding 10px 13px 8px 15px
  text-transform uppercase
  font-size 15px
  letter-spacing 1.5px
  display inline-block
  cursor pointer
  user-select(none)
  transition all .3s
  background transparent
  &:hover
    color #303539
    background $white
    border-color $white

.topic-change
  overflow scroll
  .topic-change-area
    margin-bottom 35px
  h3
    color #999999
    line-height 47px
    text-transform uppercase
    font-weight 300
    font-family $primaryTypeface
    font-style normal
    font-size 18px
    margin-bottom 1px
  h2
    color #f5f5f5
    font-style italic
    font-size 40px
    margin-bottom 7px
    font-weight 400
    cursor pointer
    line-height 39px
    border-bottom 2px solid transparent
    display block
    white-space nowrap
    margin-bottom 16px

.topic-change-close
  position absolute
  top 15px
  right 15px
  color $white
  font-size 20px
  cursor pointer