.topicSelect
  background-color #53606c
  background-attachment fixed
  background-position bottom
  height 550px
  .content
    padding 100px 0px 0px 0px
    width 600px
    margin 0 auto
    position relative

.topicSelect-topics
  padding 20px 0px
  text-align center
  .btn
    margin 10px 10px
    &:hover
      color #062158

.topicSelect-title
  font-size 240px
  font-family "lust", "adobe-caslon-pro", serif
  font-weight 400
  font-style normal
  text-align center
  display block
  color #ffffff
  position fixed
  width 100%
  top 220px
  color #17191C

.topicSelect-intro
  text-align center
  color #ffffff
  font-size 26px
  font-style italic
  margin 10px 0px
  font-size 37px
  line-height 45px

.topicSelect-viewAll
  text-decoration dotted
  &:hover
    text-decoration underline

.topicSelect-backToTopics
  color #ffffff
  font-size 16px
  font-family $secondaryTypeface
  text-align center
  display block
