.resourceModal
  position fixed
  top 50px
  width 90%
  margin-left 20px
  background #F7F7F7
  z-index 2000

.resource-embed
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%
  height auto

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.resource-desc
  padding 10px

.resource-title
  text-align left
  font-family $primaryTypeface
  font-size 30px
  color #1b1a16
  font-size 30px
  font-weight 800

.resource-label
  margin-bottom 10px

.resource-external
  width 210px
  display block
  margin 15px 0 15px 0


//==============================================================================
//  Media Queries
//==============================================================================
@media screen and (min-width: 650px)
  .resourceModal
    width 630px
    left 50%
    margin-left -315px

@media screen and (min-width: 960px)
  .resourceModal
    width 940px
    top 150px
    left 50%
    margin-left -(940 / 2)px
    .resource
      position relative
      clearfix()

  .resource-media
    width 620px
    float left

  .resource-desc
    width 320px
    float right

    .resourceUploaded
      position absolute
      bottom 10px
      width 320px


