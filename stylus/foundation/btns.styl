.btn
  font-size 20px
  user-select(none)
  font-family $primaryTypeface
  font-style italic
  border 2px solid #ffffff
  color #ffffff
  display inline-block
  padding 10px 18px 7px 18px
  cursor pointer
  transition all .3s

  margin 10px 10px
  border-radius 26px
  padding 10px 18px 9px 18px
  font-family "proxima-nova"
  font-size 16px
  font-style normal

  // color #2d3237
  transition all .3s

  // border 2px solid #575757
  // background transparent
  // color #8A8A8A
  &:hover
    border 2px solid #ffffff
    background #ffffff
    color #272c30

.btn-sm
  padding 7px 7px 4px 7px
  font-size 13px
  text-transform uppercase
  font-size 13px
  font-weight 800
  font-style normal
  font-family $secondaryTypeface
