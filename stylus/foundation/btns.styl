.btn
  font-size 20px
  user-select(none)
  font-family $primaryTypeface
  font-style italic
  border 3px solid #ffffff
  display inline-block
  padding 10px 18px 7px 18px
  color #ffffff
  cursor pointer
  transition all .3s

  margin: 10px 10px;
  border-radius: 26px;
  padding: 10px 18px 9px 18px;
  font-family: "proxima-nova";
  font-size: 16px;
  font-style: normal;

  &:hover
    background #ffffff
    color #2d3237

.btn-sm
  padding 7px 7px 4px 7px
  font-size 13px
  text-transform uppercase
  font-size 13px
  font-weight 800
  font-style normal
  font-family $secondaryTypeface
